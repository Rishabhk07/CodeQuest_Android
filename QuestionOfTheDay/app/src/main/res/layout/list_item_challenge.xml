<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:id="@+id/list_item_challenge_tv_challenge_name"
        android:text="Java Quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/list_item_challenge_tv_users_in_game"
        android:text="A, B, C and 3 others"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/list_item_challenge_tv_challenge_date"
        android:text="1/1/16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="true">

        <LinearLayout
            style="@style/Widget.CardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:id="@+id/list_item_challenge_tv_challenge_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Java Quiz"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <TextView

                android:id="@+id/list_item_challenge_tv_users_in_game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A, B, C and 3 others" />

            <TextView

                android:id="@+id/list_item_challenge_tv_challenge_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1/1/16" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
    </android.support.v7.widget.CardView>

</LinearLayout>